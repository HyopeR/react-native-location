{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "esnext",
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["es2015", "es2016", "esnext"],
    "types": ["react-native", "jest"]
  },
  "include": ["src"],
  "exclude": [
    "example",
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
